{
  "manifest_version": 3,
  "name": "Pica Integration Module",
  "version": "1.1",
  "description": "Download YouTube videos with Pica",
  "permissions": ["clipboardWrite"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["*://www.youtube.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}
